{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "no-unused-vars": 2,
    "no-console": "off",
    "no-undef": 2,
    "react/prop-types": 0,
    "react/react-in-jsx-scope": "off",
    "react/jsx-props-no-spreading": "off",
    "react/jsx-max-props-per-line": [1, { "maximum": 3 }]
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
